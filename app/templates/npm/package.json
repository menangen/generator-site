{
  "name": "<%= projectName %>",
  "version": "0.1.0",
  "description": "Rollup based Website",
  "main": "rollup.config.js",
  "scripts": {
    "pug": "pug src/pug/ --out dist/ --pretty",
    "pug:watch": "pug --out dist/ --pretty --watch src/pug/",
    "serve": "http-server --silent -c 1 -o",<% if (javascript) { %>
    "js": "rollup -c --sourcemap",
    "js:watch": "rollup -c -w --sourcemap",<% } %><% if (less) { %>
    "less": "lessc src/less/styles.less dist/css/styles.css --source-map<% if (bootsrap) { %> --include-path=node_modules/bootstrap-less<% } %>",
    "less:watch": "./node_modules/.bin/watch --interval=0.3 'echo Less files compiling && lessc src/less/styles.less dist/css/styles.css --source-map<% if (bootsrap) { %> --include-path=node_modules/bootstrap-less<% } %>' src/less",<% } %><% if (sass) { %>
    "sass": "node-sass src/sass/styles.scss dist/css/styles.css<% if (bootsrap) { %> --include-path node_modules/bootstrap-sass/assets/stylesheets<% } %>",
    "sass:watch": "node-sass --watch src/sass/styles.scss dist/css/styles.css<% if (bootsrap) { %> --include-path node_modules/bootstrap-sass/assets/stylesheets<% } %>",<% } %>
    "watch": "concurrently \"npm run <% if (less) { %>less<% } %><% if (sass) { %>sass<% } %>:watch\"<% if (javascript) { %> \"npm run js:watch\"<% } %> \"npm run pug:watch\"",
    "build": "npm run pug && npm run <% if (less) { %>less<% } %><% if (sass) { %>sass<% } %><% if (javascript) { %> && npm run js<% } %>"
  },
  "author": "Anna Novikova",
  "license": "ISC",
  "devDependencies": {<% if (less) { %>
    "less": "^2.7.2",
    "watch": "^1.0.2",<% if (bootsrap) { %>
    "bootstrap-less": "^3.3.8",<% }} %><% if (sass) { %>
    "node-sass": "^4.5.3",<% if (bootsrap) { %>
    "bootstrap-sass": "^3.3.7",<% }} %><% if (javascript) { %>
    "rollup": "^0.41.6",
    "rollup-watch": "^3.2.2",<% if (javascript === 'vue' || javascript === 'preact') { %>
    "rollup-plugin-node-resolve": "^3.0.0",<% if (javascript === 'vue') { %>
    "rollup-plugin-vue": "^2.4.0",
    "vue": "^2.3.3",<% } %><% if (javascript === 'preact') { %>
    "rollup-plugin-babel": "^2.7.1",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "preact": "^8.1.0",<% }}} %>
    "http-server": "^0.10.0",
    "concurrently": "^3.4.0",
    "pug": "^2.0.0-rc.1",
    "pug-cli": "^1.0.0-alpha6"
  }
}